package claselaboratorio2;

public class Automovil {
	
	private int cantidadRuedas;  
	private int largo; 
	private int ancho; 
	private int motor; 
	private int pesoPlataforma; 
	
	private String color; 
	private int pesoTotal; 
	private boolean asientosCuero, climatizador; 
	
	
	public Automovil() {
		cantidadRuedas = 4; 
		largo = 2000; 
		ancho = 300; 
		motor = 1600; 
		pesoPlataforma = 500; 
		
	}
	
	public String obtenerDatosGenerales() { //GETTER
		
		return "La plataforma del automovil tiene "+ cantidadRuedas+" ruedas"+ 
		", Mide "+ largo/1000 +" metros con un ancho de "+ ancho+
		" cm, un motor de "+motor+" Cc y un peso de plataforma de "+ pesoPlataforma+ " kg"; 
	}
	
	public void establecerColor (String colorAutomovil) { //SETTER
		
		color = colorAutomovil; 
		
	}
	
	public String obtenerColor() { //Getter
		return "El color del automovil es "+ color; 
	}
	
	public void configurarAsientos(String asientosCuero) {//SETTER
		
		if (asientosCuero.equalsIgnoreCase("si")) {
			this.asientosCuero = true; 
		}else {
			this.asientosCuero = false; 
		}
	}
	
	public String obtenerAsientos() { //GETTER
		
		if(asientosCuero==true) {
			return "El automovil tiene asientos de cuero"; 
		}else {
			return "El automovil tiene asientos de serie"; 
		}
	}
	
	public void configurarClimatizador(String climatizador) {//SETTER
		
		if(climatizador.equalsIgnoreCase("si")) {
			this.climatizador =true; 
		}else {
			this.climatizador = false; 
		}
	}
	
	public String obtenerClimatizador() {//GETTER
		if(climatizador ==true){
			return "El automovil incorpora climatizador"; 
		}else {
			return "El automovil lleva aire acondicionado"; 
		}
	}
	
	
	public String obtenerPesoAutomovil() {//SETTER Y GETTER 
		
		int pesoCarroceria =500; 
		
		pesoTotal = pesoPlataforma+pesoCarroceria; 
		
		if(asientosCuero ==true) {
			pesoTotal= pesoTotal+50; 
		}
		
		if(climatizador==true) {
			pesoTotal= pesoTotal+20; 
		}
		
		return "El peso del automovil es: "+ pesoTotal; 
	}
	
	 public int obtenerPrecioAutomovil() { //GETTER
		
		 int precioFinal = 10000; 
		 
		 if(asientosCuero==true) {
			 precioFinal+=2000; 
		 }
		 if(climatizador==true) {
			 precioFinal+=1500; 
		 }
		 
		 return precioFinal;
		 }

}
